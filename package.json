{
  "name": "graphql-sequelize-postgres",
  "version": "0.15.0",
  "private": true,
  "main": "index.js",
  "dependencies": {
    "apollo-server-express": "^1.2.0",
    "apollo-tracing": "^0.0.9",
    "body-parser": "^1.18.1",
    "bunyan": "^1.8.12",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "express": "^4.15.4",
    "express-bunyan-logger": "^1.3.2",
    "graphql": "^0.11.7",
    "husky": "^0.14.3",
    "lint-staged": "^4.3.0",
    "lodash": "^4.17.4",
    "pg": "^7.3.0",
    "pg-hstore": "^2.3.2",
    "prettier-standard": "^7.0.3",
    "prop-types": "^15.5.10",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "sequelize": "^4.20.1",
    "sequelize-cli": "^3.0.0-3",
    "sequelize-cockroachdb": "^1.0.2",
    "snazzy": "^7.0.0",
    "validate-commit-msg": "^2.14.0"
  },
  "devDependencies": {
    "nodemon": "^1.12.1",
    "standard": "^10.0.3"
  },
  "scripts": {
    "install": "node init.js",
    "commitmsg": "validate-commit-msg",
    "precommit": "lint-staged && yarn changelog",
    "prepush": "yarn test",
    "test": "yarn lint",
    "lint": "prettier-standard --verbose --fix src/**/*.js | snazzy",
    "start": "DEBUG=1 NODE_PATH=./src node src",
    "start:dev": "NODE_PATH=./src nodemon --exec \"yarn lint && node\" src | bunyan",
    "changelog": "rm CHANGELOG.md && conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier-standard --verbose | snazzy",
      "git add"
    ]
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ],
      "scope": {
        "required": false,
        "allowed": [
          "*"
        ],
        "validate": true,
        "multiple": true
      },
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": "",
      "autoFix": false
    }
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "delay": "2500"
  },
  "keywords": [
    "graphql",
    "sequelize",
    "api",
    "skills"
  ],
  "author": "Ornous <snekshaark@gmail.com>",
  "license": "ISC",
  "description": "GraphQL API for Project Skills"
}
